<% if @user.errors.present? %>
	<div class="alert alert-danger">
		<ul>
			<% @user.errors.full_messages.each do |message| %>
				<li><%= message %></li>
			<% end %>
		</ul>
	</div>
<% end %>

<div class="main">
	<div class="card devise-card">
		<div class="form-wrap">
			<div class="valign-wrapper center-align">
				<h2 class="logo-img"></h2>
			</div>
			<%= form_with url: user_registration_path, scope: @user, local: true do |f| %>
				<div class="row">
					<div class="input-field col s12">
						<%= f.email_field :email, id: 'email', class: "validate" %>
						<%= f.label :email %>
					</div>
				</div>
				<div class="row">
					<div class="input-field col s12">
						<%= f.text_field :name, id: 'name', class: "validate" %>
						<%= f.label :name %>
					</div>
				</div>
				<div class="row">
					<div class="input-field col s12">
						<%= f.password_field :password, id: 'password', class: "validate", autocomplete: "off" %>
						<%= f.label :password %>
					</div>
				</div>
				<div class="row">
					<div class="input-field col s12">
						<%= f.password_field :password_confirmation, id: 'password_confirmation', class: "validate", autocomplete: "off" %>
						<%= f.label :password_confirmation %>
					</div>
				</div>

				<div class="row">
					<div class="input-field col s12">
						<%= button_tag '', class: "btn waves-effect waves-light login-link", type: 'submit' do %>
						登録する
							<i class="fas fa-sign-in-alt"></i>
						<% end %>
					</div>
				</div>
			<% end %>
			<div class="row">
				<div class="col s12">
					<p class="devise-link">
						アカウントをお持ちですか？<%= link_to "サインインする", new_user_session_path %>
					</p>
				</div>
			</div>
		</div>
	</div>
</div>
