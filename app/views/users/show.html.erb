<h1>ユーザーの詳細</h1>

<div class="nav justify-content-end">
	<%= link_to '一覧', users_path, class: 'nav-link' %>
</div>

<table class="table table-hover">
  <tbody>
    <tr>
      <th scope="row"><%= User.human_attribute_name(:id) %></th>
      <td><%= @user.id %></td>
    </tr>
    <tr>
      <th scope="row"><%= User.human_attribute_name(:name) %></th>
      <td><%= @user.name %></td>
    </tr>
    <tr>
      <th scope="row"><%= User.human_attribute_name(:email) %></th>
      <td><%= @user.email %></td>
    </tr>
    <tr>
      <th scope="row"><%= User.human_attribute_name(:admin) %></th>
      <td><%= @user.admin? ? 'あり' : 'なし' %></td>
    </tr>
    <tr>
      <th scope="row"><%= User.human_attribute_name(:updated_at) %></th>
      <td><%= @user.updated_at %></td>
    </tr>
    <tr>
      <th scope="row"><%= User.human_attribute_name(:created_at) %></th>
      <td><%= @user.created_at %></td>
    </tr>
  </tbody>
</table>

<%= link_to '編集', edit_user_path, class: 'btn btn-primary mr-3' %>
<td><%= link_to '削除', users_path, method: :delete, data: { confirm: "ユーザー「#{@user.name}」を削除します。よろしいですか？" }, class: "btn btn-danger" %></td>
