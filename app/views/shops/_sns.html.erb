<ul class="shareList">
  <li class="shareList-item">
		<%= link_to "https://twitter.com/share?url=#{request.url}&text=#{@shop.name}", class: 'icon icon-twitter', title: 'Twitter', target: '_blank' do %>
      <i class="fab fa-twitter"></i>
    <% end %>
  </li>
  <li class="shareList-item">
		<%= link_to "https://www.facebook.com/sharer/sharer.php?u=#{request.url}&text=#{@shop.name}", class: 'icon icon-facebook', title: 'Facebook', target: '_blank' do %>
      <i class="fab fa-facebook"></i>
    <% end %>
  </li>
  <li class="shareList-item">
		<%= link_to "http://line.me/R/msg/text/?#{request.url}&text=#{@shop.name}", class: 'icon icon-line', title: 'LINE', target: '_blank' do %>
      <i class="fab fa-line"></i>
    <% end %>
  </li>
</ul>
