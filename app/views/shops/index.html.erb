<div class="search-container">
	<%= search_form_for @q do |f| %>
	<div class="form-group row">
		<div class="col-8">
			<%= f.search_field :address_cont, id: 'search-input', class: "form-control", placeholder: 'お店の名前または住所を入力してください' %>
			<button class="search-icon"><i class="fa fa-search"></i></button>
		</div>
		<div class="col-4">
			<%= f.submit 'お店を検索する', class: 'btn btn-primary search-btn' %>
		</div>
	</div>
	<% end %>
</div>

<div class="shops-wrap">
	<div class="mt-3">
		<%= paginate @shops %>
		<%= page_entries_info @shops, entry_name: '店舗' %>
	</div>

	<div class="card-columns mt-3">
		<% @shops.each do |shop| %>
		<%= render partial: "shop", locals: {shop: shop} %>
		<% end %>
	</div>
</div>

<script>
	$(function () {
		$('#shops-link').addClass('active')
	})
</script>
