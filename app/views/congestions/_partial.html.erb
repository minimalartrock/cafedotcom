<div class="congestion">
	<ul class="list-group list-group-horizontal">
		<li class="list-group-item d-flex justify-content-between align-items-center">
			<%= link_to shop_congestion_path(:status => Congestion.statuses.key(0), :shop_id => shop.id, :user_id => current_user.id), method: :post, remote: true do %>
				<i class="far fa-laugh" data-toggle="tooltip" data-placement="top" title="<%= Congestion.statuses_i18n[:vacant] %>"></i>
				<span class="badge badge-primary badge-pill">1</span>
			<% end %>
		</li>
		<li class="list-group-item d-flex justify-content-between align-items-center">
			<%= link_to shop_congestion_path(:status => Congestion.statuses.key(1), :shop_id => shop.id, :user_id => current_user.id), method: :post, remote: true do %>
				<i class="far fa-smile" data-toggle="tooltip" data-placement="top" title="<%= Congestion.statuses_i18n[:usually] %>"></i>
				<span class="badge badge-primary badge-pill">2</span>
			<% end %>
		</li>
		<li class="list-group-item d-flex justify-content-between align-items-center">
			<%= link_to shop_congestion_path(:status => Congestion.statuses.key(2), :shop_id => shop.id, :user_id => current_user.id), method: :post, remote: true do %>
				<i class="far fa-dizzy" data-toggle="tooltip" data-placement="top" title="<%= Congestion.statuses_i18n[:crowded] %>"></i>
				<span class="badge badge-primary badge-pill">14</span>
			<% end %>
		</li>
	</ul>
</div>

