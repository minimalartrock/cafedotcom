<!DOCTYPE html>
<html>
  <head>
    <title>Cafedotcom</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

		<meta name="viewport" content="width=device-width, initial-scale=1">

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

		<nav class="navbar navbar-expand-lg navbar-light bg-light ml-auto">
			<%= link_to 'カフェどっと混む', root_path, class: "navbar-brand" %>
			<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>

			<div class="collapse navbar-collapse" id="navbarSupportedContent">
				<ul class="navbar-nav mr-auto">
					<li class="nav-item">
						<%= link_to '店一覧', shops_path, class: "nav-link" %>
					</li>
					<li class="nav-item">
						<%= link_to 'ユーザー一覧', users_path, class: "nav-link" %>
					</li>
					<% if user_signed_in? %>
						<li class="nav-item">
							<%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "nav-link" %>
						</li>
						<li class="nav-item">
							<%= link_to user_path(current_user.id) do %>
								<%= image_tag current_user.avatar, class: "commonNavIcon profile-icon" if current_user.avatar.attached? %>
							<% end %>
						</li>
					<% else %>
						<li class="nav-item">
							<%= link_to 'ログイン', user_session_path, class: "nav-link" %>
						</li>
					<% end %>
				</ul>
			</div>
		</nav>

		<div class="container">
			<% if flash[:notice] %>
				<div class="alert alert-info">
					<%= flash[:notice] %>
				</div>
			<% end %>
			<% if flash[:alert] %>
				<div class="alert alert-danger">
					<%= flash[:alert] %>
				</div>
			<% end %>
			<%= yield %>
		</div>
  </body>
</html>
