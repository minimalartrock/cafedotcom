<ul id="admin-menu" class="dropdown-content">
	<li class="admin-menu">
		<%= link_to admin_shops_path do %>
			店舗一覧
			<i class="material-icons left">store</i>
		<% end %>
	</li>
	<li class="admin-menu">
		<%= link_to admin_users_path do %>
			ユーザー一覧
			<i class="material-icons left">person_add</i>
		<% end %>
	</li>
</ul>
<ul id="admin-menu-mobile" class="dropdown-content admin-menu">
	<li class="admin-menu">
		<%= link_to admin_shops_path do %>
			店舗一覧
			<i class="material-icons left">store</i>
		<% end %>
	</li>
	<li class="admin-menu">
		<%= link_to admin_users_path do %>
			ユーザー一覧
			<i class="material-icons left">person_add</i>
		<% end %>
	</li>
</ul>
<ul id="user-menu" class="dropdown-content user-menu">
	<% if user_signed_in? %>
		<li>
			<%= link_to user_path(current_user.id) do %>
				プロフィール
				<i class="material-icons left">account_circle</i>
			<% end %>
		</li>
		<li>
			<%= link_to logout_path, method: :delete do %>
				ログアウト
				<i class="material-icons right">lock_outline</i>
			<% end %>
		</li>
	<% end %>
</ul>
<div class="navbar-fixed">
  <nav>
    <div class="nav-wrapper animated slideInDown">
      <%= link_to root_path, class: 'brand-logo' do %>
        <% image_tag '/images/logo.png' %>
      <% end %>
      <a href="#" data-target="mobile" class="sidenav-trigger"><i class="material-icons">menu</i></a>
      <ul class="right hide-on-med-and-down">
        <% if user_signed_in? %>
					<li class="favorites-menu">
						<%= link_to user_favorites_path(current_user) do %>
							お気に入りのお店
							<i class="material-icons left">favorite</i>
						<% end %>
					</li>
					<% if current_user.admin? %>
						<li>
							<a class="dropdown-trigger" href="#" data-target="admin-menu">
								管理者メニュー
								<i class="material-icons left">supervisor_account</i>
								<i class="material-icons right">arrow_drop_down</i>
							</a>
						</li>
					<% end %>
					<li>
						<a class="dropdown-trigger avatar-menu" href="#" data-target="user-menu"><%= image_tag avatar_for(current_user), class: 'avatar-small' %></a>
					</li>
				<% else %>
					<%= link_to login_path, class: 'btn waves-effect waves-light btn-small' do %>
						ログイン
						<i class="material-icons right">lock_open</i>
					<% end %>
				<% end %>
      </ul>
    </div>
  </nav>
</div>

<ul id="mobile" class="sidenav">
	<li>
		<div class="user-view">
			<div class="background">
				<img src="/images/background.png">
			</div>
			<% if user_signed_in? %>
				<%= link_to user_path(current_user.id) do %>
					<%= image_tag avatar_for(current_user), class: 'circle' %>
				<% end %>
				<span class="white-text name"><%= current_user.name %></span>
				<span class="white-text email"><%= current_user.email %></span>
			<% else %>
				<%= image_tag '/images/default-avatar.png', class: 'circle' %>
				<span class="white-text name">Your Name</span>
				<span class="white-text email">Your Email</span>
			<% end %>
		</div>
	</li>
	<% if user_signed_in? %>
		<li class="favorites-menu">
			<%= link_to user_favorites_path(current_user) do %>
				お気に入りのお店
				<i class="material-icons left">favorite</i>
			<% end %>
		</li>
		<% if current_user.admin? %>
			<li>
				<a class="dropdown-trigger" href="#" data-target="admin-menu-mobile">
					管理者メニュー
					<i class="material-icons left">supervisor_account</i>
					<i class="material-icons right">arrow_drop_down</i>
				</a>
			</li>
		<% end %>
	<% end %>
	<li><div class="divider"></div></li>
	<li>
		<% if user_signed_in? %>
			<%= link_to logout_path, class: 'btn waves-effect waves-light', method: :delete do %>
				<i class="material-icons right">lock_outline</i>
				ログアウト
			<% end %>
		<% else %>
			<%= link_to login_path, class: 'btn waves-effect waves-light' do %>
				<i class="material-icons right">lock_open</i>
				ログイン
			<% end %>
		<% end %>
	</li>
</ul>

<script>
  $(document).ready(function(){
			$('.sidenav').sidenav();
			$('.dropdown-trigger').dropdown();
    });
</script>
