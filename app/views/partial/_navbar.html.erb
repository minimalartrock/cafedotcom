<nav class="navbar navbar-dark bg-dark navbar-expand-lg navbar-light bg-light p-4">
	<%= link_to root_path do %>
	<% image_tag 'logo.png', class: "navbar-brand" %>
	<% end %>
	<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav"
		aria-expanded="false" aria-label="Toggle navigation">
		<span class="navbar-toggler-icon"></span>
	</button>
	<div class="collapse navbar-collapse" id="navbarNav">
		<ul class="navbar-nav mr-auto">
			<li id="shops-link" class="nav-item">
				<%= link_to 'お店をさがす', shops_path, class: 'nav-link' %>
			</li>
			<% if user_signed_in? %>
			<% if current_user.admin? %>
			<li id="users-link" class="nav-item">
				<%= link_to 'ユーザー一覧', users_path, class: 'nav-link' %>
			</li>
			<% end %>
			<li class="nav-item">
				<%= link_to 'ログアウト', logout_path, method: :delete, class: 'nav-link' %>
			</li>
			<% end %>
		</ul>
		<ul class="navbar-nav">
			<li class="nav-item">
				<% if user_signed_in? %>
				<%= link_to user_path(current_user.id) do %>
				<%= image_tag current_user.avatar, class: 'header-avatar' if current_user.avatar.attached? %>
				<% end %>
				<% else %>
				<%= link_to login_path do %>
				<%= image_tag 'no-image', class: 'header-avatar' %>
				<% end %>
				<% end %>
			</li>
		</ul>
	</div>
</nav>
