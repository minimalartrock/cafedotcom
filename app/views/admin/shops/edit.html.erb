<nav>
	<div class="nav-wrapper">
		<div class="col s12">
			<%= link_to root_path, class: 'breadcrumb' do %>
				<span><i class="fas fa-home"></i>HOME</span>
			<% end %>
			<%= link_to '店舗一覧', admin_shops_path, class: "breadcrumb" %>
			<a class="breadcrumb active">店舗編集</a>
		</div>
